<%- include('partials/head.ejs', { title: title, bodyClass: bodyClass }) %>
  <h1><%= title %></h1>
  <h2>&lsaquo; <a href="/dashboard"> Back to Dashboard</a></h2>
  <form id="edit" action="/edit" method="POST">
    <p><sl-input name="firstName" label="First name." value="<%= page.firstName %>"></sl-input></p>
    <p><sl-input name="lastName" label="Last name." value="<%= page.lastName %>"></sl-input></p>
    <p><sl-input name="email" type="email" label="Email." placeholder="user@domain.com" value="<%= page.email %>"></sl-input></p>
    <p><indelible-page-type media-type="<%= page.mediaType %>" media-url="<%= page.mediaURL %>"></indelible-page-type></p>
    <hr />
    <p><sl-button type="submit" variant="primary">Edit Page</sl-button></p>
    <input type="hidden" name="id" value="<%= page.id %>" />
  </form>
<%- include('partials/footer.ejs') %>
